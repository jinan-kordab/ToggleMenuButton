<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toggle Button Example</title>
    <script src="~/Content/jquery-2.1.3.min.js"></script>
    <link href="~/Content/metro.css" rel="stylesheet" />
    <script src="~/Content/metro.js"></script>
    <link href="~/Content/metro-responsive.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

    <style type="text/css">
        @@media only screen and (max-width: 640px) {

            /*
                SCREEN MINIMIZED - MOBILE VIEW
            */

            .f-menu {
                display: none;
            }

                .f-menu > li > .d-menu {
                    top: 0%;
                }

            #ToggleButton {
                display: inline;
            }
        }

        @@media only screen and (min-width: 640px) {
            /*
                SCREEN MAXIMIZED - DESKTOP VIEW
            */

            .f-menu {
                display: flex;
                visibility: visible;
            }

            #ToggleButton {
                display: none;
            }
        }
    </style>

    <script type="text/javascript">

        function toggleMenu() {

            var display = $(".f-menu").css("display");

            if (display == "none") {
                $(".f-menu").css("display", "flex");
            }
            else if (display == "flex") {
                $(".f-menu").css("display", "none");
            }
        }

        $(window).resize(function () {
            var windowsize = $(window).width();
            //alert(windowsize);
            if (windowsize > 640) {
                var display = $(".f-menu").css("display");

                if (display == "none") {
                    $(".f-menu").css("display", "flex");
                }
            }
        });

    </script>
</head>
<body class="metro">

    <div id="ToggleButton" onclick="toggleMenu()">
        <div style="font-size: 3em;color:Tomato;text-align:left;background-color:Gray;padding-left:10px">
            <i class="fas fa-bars"></i>
        </div>
    </div>


    <ul class="f-menu block-shadow-impact">
        <li><a href="#">Home</a></li>
        <li class="">
            <a href="#" class="dropdown-toggle">More...</a>
            <ul class="d-menu" data-role="dropdown" style="display: none;">
                <li><a href="#">About</a></li>
                <li><a href="#">Partners</a></li>
                <li class="">
                    <a href="#" class="dropdown-toggle">More...</a>
                    <ul class="d-menu" data-role="dropdown" style="display: none;">
                        <li><a href="#">About</a></li>
                        <li><a href="#">Partners</a></li>
                    </ul>
                </li>
            </ul>
        </li>
        <li><a href="#">File</a></li>
        <li><a href="#">Products</a></li>
        <li>
            <a href="#" class="dropdown-toggle">More...</a>
            <ul class="d-menu" data-role="dropdown">
                <li><a href="#">About</a></li>
                <li><a href="#">Partners</a></li>
            </ul>
        </li>
    </ul>


    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>
